        {
            "type": "java",
            "name": "Debug (Launch)-SparseMatrix - Matrix Info",
            "request": "launch",
            "mainClass": "SparseMatrix",
            "args": "-i ./data/MatrixInfo.txt"
        },
        {
            "type": "java",
            "name": "Debug (Launch)-SparseMatrix - Print Matrix",
            "request": "launch",
            "mainClass": "SparseMatrix",
            "args": "-r ./data/MatrixRead.txt"
        },
        {
            "type": "java",
            "name": "Debug (Launch)-SparseMatrix - Transpose Matrix",
            "request": "launch",
            "mainClass": "SparseMatrix",
            "args": "-t ./data/MatrixTranspose.txt"
        },
        {
            "type": "java",
            "name": "Debug (Launch)-SparseMatrix - Add Matrix",
            "request": "launch",
            "mainClass": "SparseMatrix",
            "args": "-a ./data/MatrixAdd1.txt ./data/MatrixAdd2.txt"
        },
    ]
